#!/bin/bash

# TODO: Currently, this is hardcoded. Ideally, this should be rewritten to be configurable.

function ps1_powerline {
  RETCODE=$? # save return code
  NUM_JOBS=$(jobs -rp | wc -l)
  GIT_BRANCH=$(__git_ps1)

  local GREY="\[\e[48;5;240m\]\[\e[38;5;250m\]"
  local GREY_END="\[\e[48;5;2m\]\[\e[38;5;240m\]ÓÇ∞"

  local GREEN="\[\e[48;5;2m\]\[\e[38;5;255m\]"
  local GREEN_END="\[\e[48;5;27m\]\[\e[38;5;2m\]ÓÇ∞"

  local ORANGE="\[\e[48;5;208m\]\[\e[38;5;255m\]"
  local ORANGE_END="\[\e[48;5;236m\]\[\e[38;5;208m\]ÓÇ∞"
  local ORANGE_RET_END="\[\e[48;5;160m\]\[\e[38;5;208m\]ÓÇ∞" # when next segment is prompt with return code

  local BLUE="\[\e[48;5;27m\]\[\e[38;5;255m\]"
  local BLUE_END="\[\e[48;5;208m\]\[\e[38;5;27m\]ÓÇ∞"           # when next segment is git
  local BLUE_END_JOBS="\[\e[48;5;93m\]\[\e[38;5;27m\]ÓÇ∞"       # when next segment is jobs
  local BLUE_END_ALT="\[\e[48;5;236m\]\[\e[38;5;27m\]ÓÇ∞"       # when next segment is prompt
  local BLUE_END_RET="\[\e[48;5;160m\]\[\e[38;5;27m\]ÓÇ∞"       # when next segment is prompt with return code

  local JOBS="\[\e[48;5;93m\]\[\e[38;5;255m\] ‚èé"
  local JOBS_END="\[\e[48;5;236m\]\[\e[38;5;93m\]ÓÇ∞"           # when next segment is prompt
  local JOBS_NO_RET_END="\[\e[48;5;208m\]\[\e[38;5;93m\]ÓÇ∞"    # when next segment is git
  local JOBS_NO_GIT_END="\[\e[48;5;160m\]\[\e[38;5;93m\]ÓÇ∞"    # when next segment is prompt with return code

  local RET="\[\e[48;5;160m\]\[\e[38;5;255m\]"
  local RET_END="\[\e[0m\]\[\e[38;5;160m\]ÓÇ∞\[\e[0m\] "

  local PROMPT="\[\e[48;5;236m\]\[\e[38;5;255m\]"
  local PROMPT_END="\[\e[0m\]\[\e[38;5;236m\]ÓÇ∞\[\e[0m\] "

  if [ ! -w "$PWD" ]; then
    # Current directory is not writable
    BLUE_END="\[\e[48;5;160m\]\[\e[38;5;27m\]ÓÇ∞\[\e[38;5;255m\] ÓÇ¢ \[\e[48;5;208m\]\[\e[38;5;160m\]ÓÇ∞"
    BLUE_END_JOBS="\[\e[48;5;160m\]\[\e[38;5;27m\]ÓÇ∞\[\e[38;5;255m\] ÓÇ¢ \[\e[48;5;93m\]\[\e[38;5;160m\]ÓÇ∞"
    BLUE_END_ALT="\[\e[48;5;160m\]\[\e[38;5;27m\]ÓÇ∞\[\e[38;5;255m\] ÓÇ¢ \[\e[48;5;236m\]\[\e[38;5;160m\]ÓÇ∞"
    BLUE_END_RET="\[\e[48;5;160m\]\[\e[38;5;27m\]ÓÇ∞\[\e[38;5;255m\] ÓÇ¢ ÓÇ±"
  fi

  if [ -z "$GIT_BRANCH" ]; then
    # Is not a git repo
    if [ "$RETCODE" -eq 0 ]; then
      if [ "$NUM_JOBS" -eq 0 ]; then
        # No jobs or ret code
        PS1="$GREY \t $GREY_END$GREEN @\h $GREEN_END$BLUE \W $BLUE_END_ALT$PROMPT üéØ $PROMPT_END"
      else
        # no ret code but jobs
        PS1="$GREY \t $GREY_END$GREEN @\h $GREEN_END$BLUE \W $BLUE_END_JOBS$JOBS$NUM_JOBS $JOBS_END$PROMPT üéØ $PROMPT_END"
      fi
    else
      if [ "$NUM_JOBS" -eq 0 ]; then
        # No jobs but ret code is there
        PS1="$GREY \t $GREY_END$GREEN @\h $GREEN_END$BLUE \W $BLUE_END_RET$RET üéØ ‚öë $RETCODE $RET_END"
      else
        # Both jobs and ret code
        PS1="$GREY \t $GREY_END$GREEN @\h $GREEN_END$BLUE \W $BLUE_END_JOBS$JOBS$NUM_JOBS $JOBS_NO_GIT_END$RET üéØ ‚öë $RETCODE $RET_END"
      fi
    fi
  else
    # Is a git repo
    local NUM_MODIFIED=$(git diff --name-only --diff-filter=M | wc -l)
    local NUM_STAGED=$(git diff --staged --name-only --diff-filter=AM | wc -l)
    local NUM_CONFLICT=$(git diff --name-only --diff-filter=U | wc -l)
    local GIT_STATUS="\[\e[48;5;255m\]\[\e[38;5;208m\]ÓÇ∞\[\e[38;5;27m\] ‚úö$NUM_MODIFIED \[\e[38;5;208m\]ÓÇ±\[\e[38;5;2m\] ‚úî$NUM_STAGED \[\e[38;5;208m\]ÓÇ±\[\e[38;5;9m\] ‚úò$NUM_CONFLICT "
    if [ "$RETCODE" -eq 0 ]; then
      GIT_STATUS+="\[\e[38;5;255m\]\[\e[48;5;236m\]ÓÇ∞"
    else
      GIT_STATUS+="\[\e[38;5;255m\]\[\e[48;5;160m\]ÓÇ∞"
    fi

    if [ "$RETCODE" -eq 0 ]; then
      if [ "$NUM_JOBS" -eq 0 ]; then
        # No jobs or ret code
        PS1="$GREY \t $GREY_END$GREEN @\h $GREEN_END$BLUE \W $BLUE_END$ORANGE ÓÇ†$GIT_BRANCH $GIT_STATUS$PROMPT üéØ $PROMPT_END"
      else
        # no ret code but jobs
        PS1="$GREY \t $GREY_END$GREEN @\h $GREEN_END$BLUE \W $BLUE_END_JOBS$JOBS$NUM_JOBS $JOBS_NO_RET_END$ORANGE ÓÇ†$GIT_BRANCH $GIT_STATUS$PROMPT üéØ $PROMPT_END"
      fi
    else
      if [ "$NUM_JOBS" -eq 0 ]; then
        # No jobs but ret code is there
        PS1="$GREY \t $GREY_END$GREEN @\h $GREEN_END$BLUE \W $BLUE_END$ORANGE ÓÇ†$GIT_BRANCH $GIT_STATUS$RET üéØ ‚öë $RETCODE $RET_END"
      else
        # Both jobs and ret code
        PS1="$GREY \t $GREY_END$GREEN @\h $GREEN_END$BLUE \W $BLUE_END_JOBS$JOBS$NUM_JOBS $JOBS_NO_RET_END$ORANGE ÓÇ†$GIT_BRANCH $GIT_STATUS$RET üéØ ‚öë $RETCODE $RET_END"
      fi
    fi

  fi
}

if [  "$TERM" != "linux" ]; then
   PROMPT_COMMAND="ps1_powerline; $PROMPT_COMMAND"
fi
